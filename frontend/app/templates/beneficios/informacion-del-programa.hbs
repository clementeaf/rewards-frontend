{{bread-crumbs list="Beneficios|Información del Programa"}}

{{#if model}}
  <div class="row msr-form">
    <div class="card darken-1">
      <div class="card-content">
        <span class="card-title">Configuración para ganar stars</span>
        <hr>
        <div class="row">
          <div class="input-field col s3">
            <label class="active">Tipo</label>
            <p>{{model.configuracionDeObtencionDeStars.tipoDeDispenser}}</p>
          </div>
          {{#if model.configuracionDeObtencionDeStars.activaPorMonto}}
            <div class="input-field col s3">
              <label class="active">Monto ($)</label>
              <p>{{model.configuracionDeObtencionDeStars.configuracionPorMonto.monto}}</p>
            </div>
            <div class="input-field col s3">
              <label class="active">Stars x Monto</label>
              <p>{{model.configuracionDeObtencionDeStars.configuracionPorMonto.cantidadDeStarsAOtorgar}}</p>
            </div>
          {{else}}
            <div class="input-field col s3">
              <label class="active">Stars x Transacción</label>
              <p>{{model.configuracionDeObtencionDeStars.configuracionPorOperacion.cantidadDeStarsAOtorgar}}</p>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <div class="row msr-form">
    <div class="card darken-1">
      <div class="card-content">
        <span class="card-title">Otras configuraciones</span>
        <hr>
        <div class="row">
          <div class="input-field col s3">
            <label class="active">Monto máximo de recargas anuales ($)</label>
            <p>{{model.configuracionDeRecargasAnuales.maximoDeRecargasAnuales}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row msr-form">
    <div class="card darken-1">
      <div class="card-content">
        <span class="card-title">Contratos</span>
        <hr>
        <div class="row">
          <div class="input-field col s6">
            <label class="active">Default</label>
            <p>{{model.textoContratoDefault}}</p>
          </div>
          <div class="input-field col s6">
            <label class="active">Políticamente expuesto</label>
            <p>{{model.textoContratoPoliticamenteExpuesto }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="row text-center">
    <em>No se encontraró información acerca del programa</em>
  </div>
{{/if}}
