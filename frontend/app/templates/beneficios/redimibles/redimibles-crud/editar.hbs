<div class="row msr-form">
  <div class="card darken-1">
    {{#form-validable configurarCon=opcionesDeValidacion alValidarCorrectamente=(action 'guardarRedimible') as |validar|}}
      <div class="card-content">
        <span class="card-title row">
          <div class="col s12">Editar</div>
        </span>
        <div class="row">
          {{tenpines/input-text value=model.nombre label="Nombre" name="nombre" required=true col="s6"}}
          {{tenpines/check-box value=model.ticketCompleto label='Ticket Completo' name="ticketCompleto" required=true col="s3" classNames="input-field"}}
        </div>
        <div class="row">
          {{autocomplete/de-item-multiopcion itemSeleccionado=model.itemMultiopcion  label="Item Multiopcion" col="s12"}}
        </div>

        {{redimibles/selector-de-items-micros-con-nivel itemsConNivelAgregados=model.itemsGanados nombre="Items Ganados"}}
      </div>
      <div class="card-action text-right">
        {{tenpines/material-button label='Guardar' click=(action validar) }}
        {{tenpines/material-button label='Borrar' action='eliminarRedimible' }}
      </div>
    {{/form-validable}}
  </div>
</div>

