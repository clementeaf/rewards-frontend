<div class="row">
  <div class="col s12">
      <table class="striped bordered">
        <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Ticket Completo</th>
        </tr>
        </thead>
        <tbody class="linkeable">
        {{#each model as |redimible|}}
            <tr {{action "quiereEditar" redimible}}>
            <td>{{redimible.id}}</td>
            <td>{{redimible.nombre}}</td>
            <td>{{as-yes-no-string redimible.ticketCompleto}}</td>
          </tr>
        {{else}}
          <em>No se encontraron redimibles</em>
        {{/each}}
        </tbody>
      </table>
  </div>
</div>

<div class="row">
  <div class="col s12">
    {{#if puedeAdministrarRedimibles}}
        {{tenpines/material-button action='quiereCrearNuevo' icon='add' floating=true right=true classNames='btn-medium crud-add-button' }}
    {{/if}}
    <div id="redimibleCrud">
      {{outlet}}
    </div>
  </div>
</div>
