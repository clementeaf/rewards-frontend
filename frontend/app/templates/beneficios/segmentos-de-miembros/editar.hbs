<div class="row msr-form">
  <div class="card darken-1">
    {{#form-validable configurarCon=opcionesDeValidacion alValidarCorrectamente=(action 'actualizar') as |validar|}}
      <div class="card-content">
        <span class="card-title">Segmento #{{model.id}}</span>
        <div class="row">
          {{tenpines/input-text name="nombre" value=model.nombre required=true label="Nombre" col="s12" }}
        </div>
      </div>
      <div class="card-action">
        {{tenpines/material-button label='Guardar' click=(action validar) }}
      </div>
    {{/form-validable}}
  </div>
</div>
