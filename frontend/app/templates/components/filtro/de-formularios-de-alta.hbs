<form {{action "filtrarFormularios" on="submit"}} novalidate>
  <div class="row msr-filter">
    <div class="card darken-1">
      <div class="card-content white-text">
        <div class="row">
          {{tenpines/input-text value=filtro.nombreYApellido label="Nombre y/o Apellido" col="s2"}}
          {{tenpines/input-text value=filtro.dni label="DNI" col="s2"}}
          {{tenpines/input-text value=filtro.email label="Email" col="s2"}}
          {{selector/de-sexo label="Sexo" sexoElegido=sexoAFiltrar labelParaNull=' - Sin restriccion -' nullElegible=true classNames="col s2"}}
          {{tenpines/input-date value=filtro.fechaDesde name="desde" label="Fecha de registracion (desde)" col="s2"}}
          {{tenpines/input-date value=filtro.fechaHasta name="hasta" label="Fecha de registracion (hasta)" col="s2"}}
        </div>
        <div class="row">
          {{tenpines/input-range value=filtro.limite min=1 max=1000 label="Limite de resultados" col="s2"}}
        </div>
      </div>
      <div class="card-action">
        <div class="row">
          {{tenpines/material-button label='Limpiar' action='limpiarFiltro' flat=true}}
          {{tenpines/material-button label="Filtrar" submit=true }}
        </div>
      </div>
    </div>
  </div>
</form>