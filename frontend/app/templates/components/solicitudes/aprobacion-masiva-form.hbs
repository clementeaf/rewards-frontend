<div class="row msr-form">
  <div class="card darken-1">
    <div class="card-content">
      <span class="card-title">Aprobación Masiva</span>
      <div class="row">
        <div class="col s6">
          {{tenpines/input-text name="numeroDeCaja" value=numeroDeCaja label="Número de caja" col="s12" }}
          {{tenpines/input-text name="numeroDeSobre" value=numeroDeSobre label="Número de sobre" col="s12" }}
        </div>
        {{tenpines/text-area  name="comentarioTextArea" value=comentario required=false label='Comentario' col="s6" length=longitudMaximaDeComentario}}
      </div>
    </div>
    <div class="card-action">
      <div class="row">
        {{tenpines/material-button label=aprobarSolicitudesLabel action='aprobarSolicitudes' col="offset-s8 s4" disabled=noPuedeAprobarSolicitudes}}
      </div>
    </div>
  </div>
</div>