<div class="row msr-form">
  <div class="card darken-1">
    {{#form-validable configurarCon=opcionesDeValidacion alValidarCorrectamente=submitAction as |validar|}}
      <div class="card-content">
        <span class="card-title row"><div class="col s12">{{titulo}}</div></span>
        <div class="row">
          {{selector/de-tipo-de-codigo-micros label='Tipo de Código' tipoDeCodigoElegido=itemMicros.tipoDeCodigo nullElegible=false classNames="col s2"}}
          {{tenpines/input-text label='Código' col='s2' value=itemMicros.codigo}}
          {{tenpines/input-text value=itemMicros.nombre label="Nombre" required=true col="s3"}}
          {{tenpines/check-box value=itemMicros.habilitado label="Habilitado" col="s2" classNames="input-field"}}
          {{autocomplete/de-familia-de-item-micros familiaSeleccionada=itemMicros.familia label="Familia de Item Micros" col="s2"}}
        </div>
      </div>
      <div class="card-action text-right">
        <button class="btn" type="button" {{action validar}}>Guardar</button>
      </div>
    {{/form-validable}}
  </div>
</div>
