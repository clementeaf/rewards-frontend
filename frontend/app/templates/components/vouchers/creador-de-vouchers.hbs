<div class="row msr-form">
  <div class="card darken-1">
    <div class="card-content">
      <span class="card-title">Asignaci√≥n de beneficios manual</span>
      <div class="row">
        {{selector/de-beneficios label="Beneficio" beneficioSeleccionado=voucherEnCreacion.beneficio classNames="col s4" required=true}}
        {{autocomplete/de-redimible redimibleSeleccionada=voucherEnCreacion.redimible col="s4" required=true}}
      </div>
      {{selector/de-tiempo-de-validez tiempoDeValidez=voucherEnCreacion.tiempoDeValidez classNames="row"}}
    </div>
    <div class="card-content">
      <div class="row black-text">
        {{tenpines/text-area value=voucherEnCreacion.motivoDeAsignacion name="motivoDeAsignacion" label="Motivo" col="s12" length=longitudMaximaDeMotivo required=true}}
      </div>
    </div>
    <div class="card-action">
      <div class="row">
        <div class="col offset-s10 s1">
          {{tenpines/material-button label='Limpiar' action='borrar' flat=true col="12"}}
        </div>
      </div>
    </div>
  </div>
</div>
