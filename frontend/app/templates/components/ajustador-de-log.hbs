<div class="row">
  <div class="col s12">

    <div class="card">
      <div class="card-content">
        <span class="card-title">Configurar nivel de logger</span>
        <div class="row">
          {{tenpines/input-text label="Logger" value=ajuste.logger col="s10"}}
          {{selector/de-nivel-de-log label="Nivel" nivelElegido=ajuste.nivel col="s2"}}
        </div>
      </div>
      <div class="card-action">
        <div class="row">
          {{tenpines/material-button label='Cambiar' action='ajustarLog' col="offset-s10 s2" disabled=botonDesactivado }}
        </div>
      </div>
    </div>

  </div>
</div>

<div class="row">
  <div class="col s12">
    <table class="striped bordered">
      <thead>
      <tr>
        <th>Logger</th>
        <th>Nivel</th>
      </tr>
      </thead>
      <tbody>
      {{#each ajustes as |ajuste|}}
        <tr {{action "quiereCambiarAjuste" ajuste}}>
          <td>{{ajuste.logger}}</td>
          <td>{{ajuste.nivel.nombre}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
