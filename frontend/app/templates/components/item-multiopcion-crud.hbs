<div class="row msr-form">
  <div class="card darken-1">
    {{#form-validable configurarCon=opcionesDeValidacion alValidarCorrectamente=submitAction as |validar|}}
      <div class="card-content">
        <span class="card-title row"><div class="col s12">{{titulo}}</div></span>
        <div class="row">
          {{tenpines/input-text value=itemMultiopcion.nombre label="Nombre" required=true col="s4"}}
        </div>
        <div class="row">
          {{redimibles/selector-de-items-micros-con-nivel itemsConNivelAgregados=itemMultiopcion.itemsMicrosConNivel nombre="Items Micros del Item Multiopcion"}}
        </div>
      </div>
      <div class="card-action text-right">
        <button class="btn" type="button" {{action validar}}>Guardar</button>
      </div>
    {{/form-validable}}
  </div>
</div>
