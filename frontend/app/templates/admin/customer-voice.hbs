{{bread-crumbs list="Administracion|Customer Voice"}}

<div class="col s12" id="configuracion-de-vencimiento-de-saldo">
  <div class="row msr-form">
    <div class="card darken-1">
      <div class="card-content">
        <div class="card-title">
          <div class="row">
            <div class="col s9">Beneficio entregable a miembros que respondan encuesta</div>
            {{tenpines/toggle-component value=model.habilitada labelParaTrue='HABILITADO' labelParaFalse='INHABILITADO' col="s3" }}
          </div>
        </div>

        <div class="row">
          <ul class="consecuencias-table collection with-header black-text">
            <li class="collection-header"><h5>Consecuencias</h5></li>
            {{generador-de-voucher-table-row generadoresDeVoucher=model.generadoresDeVoucher title="Redimible" description="Otorga un redimible para el miembro que respona la encuesta"}}
            {{repartidor-de-stars-bonus-table-row repartidorDeStarsBonus=model.repartidorDeStarsBonus title="Stars bonus" description="Entregar stars bonus al miembro que responda la encuesta"}}
          </ul>
        </div>

        <div class="row">
          {{#each model.generadoresDeVoucher as |generadorDeVoucher|}}
            {{consecuencias/generador-de-voucher generadoresDeVoucher=model.generadoresDeVoucher generadorDeVoucher=generadorDeVoucher}}
          {{/each}}
          {{consecuencias/repartidor-de-stars-bonus repartidorDeStarsBonus=model.repartidorDeStarsBonus}}
        </div>
      </div>
      <div class="card-action">
        {{tenpines/material-button label='Guardar configuracion' click=(action 'guardarConfiguracion') }}
      </div>
    </div>
  </div>
</div>
