<div class="row msr-form">
  <div class="card darken-1">
    {{#form-validable configurarCon=opcionesDeValidacion alValidarCorrectamente=(action 'crearTienda') as |validar|}}
      <div class="card-content">
        <span class="card-title">Nueva Tienda</span>
        <div class="row">
          {{tenpines/input-text name="nombre" value=model.nombre required=true label="Nombre" col="s4" }}
          {{tenpines/input-text name="ip" value=model.ip required=true label="Ip" col="s3" }}
          {{tenpines/input-text name="codigo" value=model.codigo required=true label="Codigo" col="s2" }}
          {{tenpines/input-text name="centrodecosto" value=model.codigo required=true label="Centro de costo" col="s3" }}
        </div>
      </div>
      <div class="card-action">
        {{tenpines/material-button label='Crear' click=(action validar) }}
        {{tenpines/material-button label='Borrar' action='resetearFormulario' }}
      </div>
    {{/form-validable}}
  </div>
</div>
