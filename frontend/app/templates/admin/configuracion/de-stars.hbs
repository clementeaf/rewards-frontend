<div class="col s12" id="configuracion-de-stars">
  <div class="row msr-form">
    <div class="card darken-1">
      <div class="card-content">
        <span class="card-title">Generar stars</span>
        <div class="row">
          {{tenpines/toggle-component value=model.activaPorMonto labelParaTrue='POR MONTO' labelParaFalse='POR TRANSACCION' disabled=noPuedeEditarConfiguracionDeStars }}
        </div>
        {{#if model.activaPorMonto}}
          <div class="card-content">
            <h3 class="card-title">Por Monto</h3>
            <div class="row">
              {{tenpines/input-number name="monto" value=model.configuracionPorMonto.monto required=true label="Monto" col="s4" disabled=noPuedeEditarConfiguracionDeStars}}
              {{tenpines/input-number name="starsAOtorgarPorMonto" value=model.configuracionPorMonto.cantidadDeStarsAOtorgar required=true label="Cantidad de Stars" col="s2" disabled=noPuedeEditarConfiguracionDeStars}}
            </div>
          </div>
          {{#if puedeEditarConfiguracionDeStars}}
            <div class="card-action">
              {{tenpines/material-button action='configurarPorMonto' label='Guardar configuracion'}}
            </div>
          {{/if}}
        {{else}}
          <div class="card-content">
            <h3 class="card-title">Por Transacci√≥n</h3>
            <div class="row">
              <div class="input-field col s4">
                {{input name="starsAOtorgarPorOperacion" value=model.configuracionPorOperacion.cantidadDeStarsAOtorgar type="text" required=true disabled=noPuedeEditarConfiguracionDeStars}}
                <label class="active">Cantidad de Stars</label>
              </div>
            </div>
          </div>
          {{#if puedeEditarConfiguracionDeStars}}
            <div class="card-action">
              {{tenpines/material-button action='configurarPorOperacion' label='Guardar configuracion'}}
            </div>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
