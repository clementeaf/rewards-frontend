<div class="row msr-form">
  <div class="card darken-1">
    {{#form-validable configurarCon=opcionesDeValidacion alValidarCorrectamente=(action 'guardarGrupo') as |validar|}}
      <div class="card-content">
        <span class="card-title">Grupo {{model.id}}</span>
        <div class="row">
          {{tenpines/input-text name="nombre" value=model.nombre required=true label="Nombre" col="s4"}}
          {{autocomplete/de-roles rolesElegidos=model.roles col="s8"}}
        </div>
      </div>
      <div class="card-action">
        {{tenpines/material-button label='Guardar' click=(action validar) }}
        {{tenpines/material-button label='Borrar' action='borrarGrupo' }}
      </div>
    {{/form-validable}}
  </div>
</div>
