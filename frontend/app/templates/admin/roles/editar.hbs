<div class="row msr-form">
  <div class="card darken-1">
    {{#form-validable configurarCon=opcionesDeValidacion alValidarCorrectamente=(action 'guardarRol') as |validar|}}
      <div class="card-content">
        <span class="card-title">Rol {{model.id}}</span>
        <div class="row">
          {{tenpines/input-text name="nombre" value=model.nombre required=true label="nombre" col="s4"}}
          {{autocomplete/de-permisos permisosElegidos=model.permisos col="s8"}}
        </div>
      </div>
      <div class="card-action">
        {{tenpines/material-button label='Guardar' click=(action validar) }}
        {{tenpines/material-button label='Borrar' action='borrarRol' }}
      </div>
    {{/form-validable}}
  </div>
</div>
