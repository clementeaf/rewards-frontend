{{bread-crumbs list="Administracion|Permisos"}}

{{#if model}}
  <table class="striped bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre Interno</th>
        <th>Nombre Publico</th>
        <th>Descripcion</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |permiso| }}
        <tr {{action 'quiereEditar' permiso}}>
          <td>{{permiso.id}}</td>
          <td>{{permiso.nombreInterno}}</td>
          <td>{{permiso.nombrePublico}}</td>
          <td>{{permiso.descripcion}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="row text-center">
    <em>No se encontraron permisos</em>
  </div>
{{/if}}

<div id="permisosCrud">
  {{outlet}}
</div>
